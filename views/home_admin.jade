doctype html
html
    head
        title Interactive Classroom | #{username}

        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Montserrat')
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lato')

        link(rel='stylesheet', href='../css/normalize.css')
        link(rel='stylesheet', href='../css/style.css')

    body

        ul(id='navbar')
            li Interactive Classroom
            li
                a(href='#managechallenges') Challenges
            li
                a(href='#manageusers') Users
            li
                a(href='/logout') Logout


        div(class='grid grid-pad')
            h1 Welcome #{username}!
            a(name='managechallenges')
            h2 Manage Challenges
            iframe(frameborder='no' width='100%' height='100%' src='/challengelist')

            a(name='manageusers')
            h2 Manage Users
            iframe(frameborder='no' width='100%' height='100%' src='/admin/userlist')
