extends template

block head

block content
	h1(class='h-pad')=title
	div(class='grid grid-pad')
		form(id="uploadForm", enctype="multipart/form-data", action="/addchallenge", method="post")
			link(rel='stylesheet', href='../css/style.css')
			input(type="file", id="userFileInput", multiple="multiple", name="userChallenge")
			input(type="submit", value="Upload")
			p(class = 'errorMessage') #{errorMsg}
		
		p	#{message}

		each frame, i in iframes
			textarea(style='width:90%')	#{frame}