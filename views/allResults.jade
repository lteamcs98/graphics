extends template

block head

block content
	h1(class='h-pad') Results

	div(class='grid row')
		div(class='col-1-3')
			p <strong>Challenge Name</strong>
		div(class='col-1-6')
			p <strong>Attempted</strong>
		div(class='col-1-6')
			p <strong>% Correct</strong>
		div(class='col-1-6')
			p <strong>Details</strong>

	each result in results
		div(class='grid row')
			div(class='col-1-3')
				a #{result.name}
			div(class='col-1-6')
				a #{result.attempted}
			div(class='col-1-6')
				a #{result.percentage}
			div(class='col-1-6')
				a(href='/results/' + result.id)
					i(class='fa fa-arrow-circle-right fa-lg hover-blue')
